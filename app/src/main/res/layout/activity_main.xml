<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abhishek.busservice.MainActivity">


    <ImageButton
        android:id="@+id/tripPlanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/allRoutes"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:text="Trip Planner"/>

    <ImageButton
        android:id="@+id/allRoutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="All Routes"/>

    <ImageButton
        android:id="@+id/airportBus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_below="@+id/tripPlanner"
        android:layout_centerHorizontal="true"
        android:text="Airport Bus9"/>

</RelativeLayout>